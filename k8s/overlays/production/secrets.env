# Database credentials (PostgreSQL)
DB_USER=opryxx_prod_user
DB_PASSWORD=change-me-to-a-secure-password

# Redis cache password
REDIS_PASSWORD=change-me-to-a-secure-password

# API Keys and External Services
SENTRY_DSN=https://sentry.example.com/your-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# Authentication
JWT_SECRET_KEY=generate-a-secure-jwt-secret-key
SECRET_KEY=generate-a-secure-django-secret-key

# AWS Credentials (for S3, etc.)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-west-2

# Security
ENCRYPTION_KEY=generate-a-secure-encryption-key

# Monitoring
GRAFANA_API_KEY=your-grafana-api-key
PROMETHEUS_TOKEN=your-prometheus-token

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=no-reply@opryxx.com

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Environment-specific secrets
ENV_SPECIFIC_SECRET=production-specific-secret-value

# Database connection pool settings
DB_MAX_CONNECTIONS=20
DB_CONN_MAX_AGE=300

# Cache settings
CACHE_TIMEOUT=3600
SESSION_COOKIE_AGE=1209600  # 2 weeks in seconds

# Security headers
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_SSL_REDIRECT=true
SECURE_REFERRER_POLICY=same-origin

# Rate limiting
RATE_LIMIT=1000

# Feature flags
ENABLE_MAINTENANCE_MODE=false
ENABLE_SIGNUP=true
ENABLE_PAYMENTS=true

# CDN and Media
AWS_STORAGE_BUCKET_NAME=opryxx-production
AWS_S3_CUSTOM_DOMAIN=cdn.opryxx.com

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Monitoring and Alerts
ALERT_EMAILS=alerts@opryxx.com,devops@opryxx.com
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/opryxx/app.log

# Performance Tuning
WORKER_COUNT=4
THREADS_PER_WORKER=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Security Headers
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self' https://api.opryxx.com"

# API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=60  # seconds

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CSRF Configuration
CSRF_COOKIE_SECURE=true
CSRF_TRUSTED_ORIGINS=https://*.opryxx.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.opryxx.com,https://www.opryxx.com
CORS_ALLOW_CREDENTIALS=true

# Database Replica (for read replicas)
DATABASE_REPLICA_URL=postgresql://replica_user:replica_password@replica-host:5432/opryxx_prod

# Cache Backend
CACHE_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/1

# Message Queue
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/3

# Monitoring Endpoints
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/healthz
READINESS_CHECK_PATH=/readyz
LIVENESS_CHECK_PATH=/livez

# Feature Flags
FEATURE_NEW_UI=true
FEATURE_EXPERIMENTAL=false
FEATURE_MAINTENANCE_MODE=false
