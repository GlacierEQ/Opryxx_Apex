# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_NAME=OPRYXX-AI
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/opryxx
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_HSTS_ENABLED=True
SECURITY_HEADERS_HSTS_MAX_AGE=31536000
SECURITY_HEADERS_CSP_ENABLED=True
SECURITY_HEADERS_CSP_DEFAULT_SRC="'self'"
SECURITY_HEADERS_CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
SECURITY_HEADERS_CSP_STYLE_SRC="'self' 'unsafe-inline'"
SECURITY_HEADERS_CSP_IMG_SRC="'self' data:"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT="1000 per day"
RATE_LIMIT_STORAGE_URI="redis://redis:6379/0"

# Prometheus Metrics
PROMETHEUS_METRICS_ENABLED=True
PROMETHEUS_METRICS_PATH=/metrics

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=opryxx-api
OTEL_PYTHON_LOG_CORRELATION=True

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_STDOUT=True
LOG_FILE=/var/log/opryxx/opryxx.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Model Configuration
MODEL_CACHE_SIZE=10
MODEL_TIMEOUT=300
MODEL_RETRY_ATTEMPTS=3
MODEL_RETRY_DELAY=1.0

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# Feature Flags
FEATURE_FLAG_AB_TESTING=False
FEATURE_FLAG_MAINTENANCE_MODE=False
FEATURE_FLAG_NEW_UI=False

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# Sentry Configuration
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# API Keys
API_KEYS=

# Trusted Proxies
TRUSTED_PROXIES=["127.0.0.1", "::1"]

# Security
SECRET_KEY=your-secret-key-here
SECURITY_PASSWORD_SALT=your-password-salt-here

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key
SESSION_COOKIE_NAME=opryxx_session
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/1
CACHE_DEFAULT_TIMEOUT=300

# Task Queue
CELERY_BROKER_URL=redis://redis:6379/2
CELERY_RESULT_BACKEND=redis://redis:6379/3
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# API Rate Limits
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000
